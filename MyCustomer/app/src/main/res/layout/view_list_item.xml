<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/TextView_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/TextView_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/TextView_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/TextView_creator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/TextView_likes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">
        <Button
            android:id="@+id/Button_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:drawableRight="@android:drawable/ic_menu_view"
            android:padding="5dp"/>

        <Button
            android:id="@+id/Button_Star"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:drawableRight="@android:drawable/star_big_on"
            android:padding="5dp"/>

        <Button
            android:id="@+id/Button_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"

            android:drawableRight="@android:drawable/sym_action_chat"
            android:padding="5dp" />
        <Button
            android:id="@+id/Button_add"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"

            android:drawableRight="@android:drawable/ic_menu_add"
            android:padding="5dp" />

    </LinearLayout>

</LinearLayout>