<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/TextView_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/TextView_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/TextView_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/TextView_creator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right">

        <Button
            android:id="@+id/Button_Edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:drawableRight="@android:drawable/ic_menu_edit"
            android:padding="5dp"></Button>

        <Button
            android:id="@+id/Button_Delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:drawableRight="@android:drawable/ic_menu_delete"
            android:padding="5dp"></Button>

        <Button
            android:id="@+id/Button_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:drawableRight="@android:drawable/ic_menu_view"
            android:padding="5dp" />
    </LinearLayout>


</LinearLayout>